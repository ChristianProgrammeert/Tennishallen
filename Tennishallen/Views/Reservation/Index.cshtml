@using Tennishallen.Data.Services
@using Tennishallen.Data.Models
@model List<Tennishallen.Data.Models.Reservation>
@{
    ViewData["Title"] = "Dashboard";
    var usergroups = new JwtService(Context.Request).GetUserGroups() ?? [];

}

<h2>Dashboard</h2>
<div>
    <div class="d-flex flex-row justify-content-between">
        <h1 class="display-4">Afspraken</h1>
        @if (usergroups.Contains(Group.GroupName.Member))
        {
            <div class="d-flex align-items-center">
                <a asp-action="Create">
                    <button type="button" class="btn btn-success">
                        <i class="bi bi-house-add"></i>
                        Afspraak Toevoegen
                    </button>
                </a>
            </div>
        }
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Coach</th>
            <th scope="col">Lid</th>
            <th scope="col">Veld</th>
            <th scope="col">Datum en tijd</th>
            @if (usergroups.Contains(Group.GroupName.Member))
            {
            <th scope="col">Bewerk</th>
            }
            <th scope="col">Verwijder</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <th scope="row">
                    <a asp-action="View" asp-route-id="@appointment.Id">
                        @appointment.Id
                    </a>
                </th>
                @if (appointment.Coach == null)
                {
                    <td>
                        Geen coach
                    </td>
                }
                else
                {
                    <td>
                        @appointment.Coach.Fullname
                    </td>
                }
                <td>
                    @appointment.Member.Fullname
                </td>
                <td>
                    @appointment.Court.Name
                </td>
                <td>
                    @appointment.Date
                    @($"{appointment.Hour:00}:00")
                </td>
                @if (usergroups.Contains(Group.GroupName.Member))
                {
                <td>
                    <a asp-action="Edit" asp-route-appointmentId="@appointment.Id">
                        <button type="button" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i>
                            Bewerk
                        </button>
                    </a>    
                </td>
                }
                <td>
                    <a asp-action="Delete" asp-route-id="@appointment.Id">
                        <button type="button" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                            Verwijder
                        </button>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>