@model Tennishallen.Models.Auth.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}


<div class="col-sm-0 col-md-6 offset-sm-0 offset-md-3" xmlns="http://www.w3.org/1999/html">
    <h1>Login op je account.</h1>

    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" type="text">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" type="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <input class="btn btn-outline-success float-end" type="submit" value="Log in">
        </div>
    </form>
</div>