@using Tennishallen.Data.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Tennishallen.Data.Models
@model Tennishallen.Data.Models.Court

@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
    var usergroups = new JwtService(this.Context.Request).GetUserGroups() ?? [];
}

<div >
    <div class="d-flex flex-row justify-content-between">
        <h1 class="display-4">@Model.Name</h1>

        <div class="d-flex align-items-center">
            <a asp-action="Index">
                <button type="button" class="btn btn-info">
                    <i class="bi bi-houses"></i>
                    Alle Kamers
                </button>
            </a>
            &ensp;
            @if (usergroups.Contains(Group.GroupName.Admin))
            {
                <a asp-action="Edit" asp-route-roomId="@Model.Id">
                    <button type="button" class="btn btn-warning">
                        <i class="bi bi-pen"></i>
                        Kamer Bewerken
                    </button>
                </a>
            }

        </div>
    </div>
    <table class="table table-striped">
        <tbody>
        <tr>
            <td>Prijs per uur</td>
            <td>
                @string.Format("\u20ac {0:N2}", @Model.Price) per uur
            </td>
        </tr>
        <tr>
            <td>Beschrijving</td>
            <td>@Model.Description</td>
        </tr>
        </tbody>
    </table>
    
</div>